wb = xlsx_package.workbook
wb.add_worksheet(name: "substations") do |sheet|
  sheet.add_row [
    'ID',
    'დასახელება',
    'რეგიონი',
    'შენიშვნა' ]
  @substations.each do |substation|
    sheet.add_row [
      substation.id.to_s,     #A
      substation.name,        #B
      substation.region.to_s, #C
      substation.description, #D
    ]
  end
end
