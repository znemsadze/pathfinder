wb = xlsx_package.workbook
wb.add_worksheet(name: "report") do |sheet|
  sheet.add_row [
    'ID',
    'დასახელება',
    'მიმართულება',
    'რეგიონი',
    'სიგრძე, კმ',
    'შენიშვნა'
  ]
  @lines.each do |line|
    sheet.add_row [
      line.id.to_s,     #A
      line.name,        #B
      line.direction,   #C
      line.region.to_s, #D
      line.length,      #E
      line.description  #F
    ]
  end
end