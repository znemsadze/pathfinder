<h2 class="page-header"><i class="fa fa-user"></i> <%=@title%></h2>
<%if @error.present?%>
<div class="alert alert-danger"><%=@error%></div>
<%end%>
<div class="row">
  <div class="col-sm-4">
    <%= form_tag request.url do %>
      <div class="form-group">
        <%=label_tag :username, t('models.sys_user.username')%>
        <%=text_field_tag :username, params[:username], autofocus:true, class:'form-control'%>
      </div>
      <div class="form-group">
        <%=label_tag :password, t('models.sys_user.password')%>
        <%=password_field_tag :password, params[:password], class:'form-control'%>
      </div>
      <div class="form-group">
        <%=submit_tag t('pages.site.login.action'), class:['btn','btn-primary']%>
      </div>
    <% end %>
  </div>
</div>
